    "copy-webpack-plugin": "^6.0.3",
    "cross-env": "^7.0.2",
    "css-loader": "^4.1.1",
    "eslint": "^7.5.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "file-loader": "^6.0.0",
    "gh-pages": "^3.1.0",
    "html-webpack-harddisk-plugin": "^1.0.2",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "json-loader": "^0.5.7",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
