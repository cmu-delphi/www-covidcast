    "core-js": "^3.6.5",
    "d3": "^5.16.0",
    "d3-tip": "^0.9.1",
    "invert-color": "^2.0.0",
    "mapbox-gl": "^1.11.1",
    "regenerator-runtime": "^0.13.7",
    "svelte-icons": "^2.1.0",
    "vega": "^5.13.0",
    "vega-embed": "^6.10.0",
    "vega-lite": "^4.14.1"
  },
  "husky": {
    "hooks": {
