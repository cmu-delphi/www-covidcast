{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": { "name": "values" },
  "width": "container",
  "height": "container",
  "padding": 0,
  "autosize": {
    "resize": true
  },
  "transform": [
    {
      "calculate": "datum.date_value",
      "as": "title"
    }
  ],
  "encoding": {
    "color": {
      "value": "grey"
    },
    "x": {
      "field": "date_value",
      "type": "temporal",
      "axis": {
        "title": null,
        "format": "%m/%d",
        "formatType": "time",
        "tickCount": "month"
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": null
    },
    "tooltip": [
      { "field": "value", "type": "quantitative", "title": "Value", "format": ".2f" },
      { "field": "stderr", "type": "quantitative", "title": "Standard Error", "format": ".2f" },
      { "field": "title", "type": "temporal", "title": null, "format": "%m/%d", "formatType": "time" }
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "interpolate": "monotone"
      }
    },
    {
      "selection": {
        "highlight": { "type": "single", "empty": "none", "on": "mouseover" }
      },
      "mark": {
        "type": "point",
        "tooltip": true,
        "radius": 1,
        "stroke": null,
        "fill": "grey"
      },
      "encoding": {
        "y": { "field": "value", "type": "quantitative" },
        "opacity": {
          "condition": {
            "selection": "highlight",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "transform": [
        {
          "filter": {
            "selection": "highlight"
          }
        }
      ],
      "mark": "rule"
    },
    {
      "description": "shows the current data injected via a signal, y: null is on purpose to invalidate a global y",
      "data": {
        "values": [{ "date_value": null }]
      },
      "transform": [
        {
          "calculate": "toDate(currentDate)",
          "as": "date_value"
        }
      ],
      "mark": "rule",
      "encoding": {
        "color": {
          "value": "#c00"
        },
        "x": {
          "field": "date_value",
          "type": "temporal"
        },
        "y": null
      }
    }
  ]
}
