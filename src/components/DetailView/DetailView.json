{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": { "name": "values" },
  "autosize": {
    "contains": "padding",
    "resize": true
  },
  "transform": [
    {
      "calculate": "datum.date_value",
      "as": "title"
    }
  ],
  "vconcat": [
    {
      "width": "container",
      "encoding": {
        "x": {
          "field": "date_value",
          "type": "temporal",
          "scale": { "domain": { "selection": "brush" } },
          "axis": {
            "title": null,
            "format": "%m/%d",
            "formatType": "time",
            "tickCount": "day",
            "grid": false
          }
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "axis": {
            "minExtent": 25,
            "title": " "
          }
        },
        "tooltip": [
          { "field": "displayName", "type": "nominal", "title": "Region" },
          { "field": "value", "type": "quantitative", "title": "Value", "format": ".2f" },
          { "field": "title", "type": "temporal", "title": null, "format": "%m/%d", "formatType": "time" }
        ]
      },
      "layer": [
        {
          "mark": {
            "type": "line",
            "interpolate": "monotone"
          },
          "encoding": {
            "color": {
              "field": "geo_value",
              "type": "nominal",
              "scale": {
                "range": ["grey", "#0F0589", "#16A997", "#A71808", "#CD22B2", "#F58B29"]
              }
            }
          }
        },
        {
          "selection": {
            "highlight": {
              "type": "single",
              "empty": "none",
              "nearest": true,
              "on": "mouseover",
              "clear": "mouseout"
            }
          },
          "mark": {
            "type": "circle",
            "tooltip": true
          },
          "encoding": {
            "color": {
              "field": "geo_value"
            }
          }
        },
        {
          "transform": [
            {
              "filter": {
                "selection": "highlight"
              }
            }
          ],
          "mark": "rule"
        },
        {
          "description": "shows the current data injected via a signal, y: null is on purpose to invalidate a global y",
          "data": {
            "values": [{ "date_value": null }]
          },
          "transform": [
            {
              "calculate": "toDate(currentDate)",
              "as": "date_value"
            }
          ],
          "mark": "rule",
          "encoding": {
            "color": {
              "value": "#c00"
            },
            "x": {
              "field": "date_value",
              "type": "temporal"
            },
            "y": null
          }
        }
      ]
    },
    {
      "height": 40,
      "encoding": {
        "color": {
          "field": "geo_value",
          "type": "nominal",
          "scale": {
            "range": ["grey", "#0F0589", "#16A997", "#A71808", "#CD22B2", "#F58B29"]
          }
        },
        "x": {
          "field": "date_value",
          "type": "temporal",
          "axis": {
            "title": null,
            "format": "%m/%d",
            "formatType": "time",
            "tickCount": "week"
          }
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "axis": {
            "minExtent": 25,
            "tickCount": 3,
            "title": " "
          }
        },
        "tooltip": [
          { "field": "displayName", "type": "nominal", "title": "Region" },
          { "field": "value", "type": "quantitative", "title": "Value", "format": ".2f" },
          { "field": "title", "type": "temporal", "title": null, "format": "%m/%d", "formatType": "time" }
        ]
      },
      "layer": [
        {
          "selection": {
            "highlight2": {
              "type": "single",
              "empty": "none",
              "nearest": true,
              "on": "mouseover",
              "clear": "mouseout"
            },
            "brush": { "type": "interval", "encodings": ["x"] }
          },
          "mark": {
            "type": "line",
            "interpolate": "monotone"
          }
        },
        {
          "transform": [
            {
              "filter": {
                "selection": "highlight2"
              }
            }
          ],
          "mark": "rule"
        },
        {
          "description": "shows the current data injected via a signal, y: null is on purpose to invalidate a global y",
          "data": {
            "values": [{ "date_value": null }]
          },
          "transform": [
            {
              "calculate": "toDate(currentDate)",
              "as": "date_value"
            }
          ],
          "mark": "rule",
          "encoding": {
            "color": {
              "value": "#c00"
            },
            "x": {
              "field": "date_value",
              "type": "temporal"
            },
            "y": null
          }
        }
      ]
    }
  ],
  "config": {
    "legend": {
      "disable": true
    }
  }
}
