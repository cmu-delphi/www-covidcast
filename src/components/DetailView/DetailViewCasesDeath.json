{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": { "name": "values" },
  "autosize": {
    "contains": "padding",
    "resize": true
  },
  "vconcat": [
    {
      "width": "container",
      "encoding": {
        "x": {
          "field": "date_value",
          "type": "temporal",
          "scale": { "domain": { "selection": "brush" } },
          "axis": {
            "title": null,
            "format": "%m/%d",
            "formatType": "time",
            "tickCount": "day",
            "grid": false
          }
        },
        "y": {
          "field": "count",
          "type": "quantitative",
          "axis": {
            "minExtent": 25,
            "title": " "
          }
        }
      },
      "layer": [
        {
          "description": "shows the current data injected via a signal, y: null is on purpose to invalidate a global y",
          "data": {
            "values": [{ "date_value": null }]
          },
          "transform": [
            {
              "calculate": "toDate(currentDate)",
              "as": "date_value"
            }
          ],
          "mark": "rule",
          "encoding": {
            "color": {
              "value": "#c00"
            },
            "x": {
              "field": "date_value",
              "type": "temporal"
            },
            "y": null
          }
        },
        {
          "data": {
            "name": "values"
          },
          "selection": {
            "highlight": {
              "type": "single",
              "empty": "none",
              "on": "mouseover",
              "clear": "mouseout",
              "nearest": true
            }
          },
          "mark": "bar",
          "encoding": {
            "opacity": {
              "condition": {
                "selection": "highlight",
                "value": 1
              },
              "value": 0.4
            },
            "color": {
              "field": "geo_value",
              "type": "nominal",
              "scale": {
                "range": ["grey", "#0F0589", "#16A997", "#A71808", "#CD22B2", "#F58B29"]
              }
            }
          }
        },
        {
          "mark": {
            "type": "line",
            "interpolate": "monotone",
            "tooltip": true
          },
          "encoding": {
            "color": {
              "field": "geo_value"
            },
            "y": {
              "field": "avg"
            }
          }
        }
      ]
    },
    {
      "height": 40,
      "encoding": {
        "opacity": {
          "condition": {
            "selection": "highlight2",
            "value": 1
          },
          "value": 0.4
        },
        "x": {
          "field": "date_value",
          "type": "temporal",
          "axis": {
            "title": null,
            "format": "%m/%d",
            "formatType": "time",
            "tickCount": "week"
          }
        },
        "y": {
          "field": "count",
          "type": "quantitative",
          "axis": {
            "minExtent": 25,
            "tickCount": 3,
            "title": " "
          }
        }
      },
      "layer": [
        {
          "description": "shows the current data injected via a signal, y: null is on purpose to invalidate a global y",
          "data": {
            "values": [{ "date_value": null }]
          },
          "transform": [
            {
              "calculate": "toDate(currentDate)",
              "as": "date_value"
            }
          ],
          "mark": "rule",
          "encoding": {
            "color": {
              "value": "#c00"
            },
            "x": {
              "field": "date_value",
              "type": "temporal"
            },
            "y": null
          }
        },
        {
          "mark": "bar",
          "data": {
            "name": "values"
          },
          "encoding": {
            "color": {
              "field": "geo_value",
              "type": "nominal",
              "scale": {
                "range": ["grey", "#0F0589", "#16A997", "#A71808", "#CD22B2", "#F58B29"]
              }
            }
          },
          "selection": {
            "highlight2": {
              "type": "single",
              "empty": "none",
              "nearest": true,
              "on": "mouseover",
              "clear": "mouseout"
            },
            "brush": { "type": "interval", "encodings": ["x"] }
          }
        }
      ]
    }
  ],
  "config": {
    "padding": 0,
    "legend": {
      "disable": true
    }
  }
}
