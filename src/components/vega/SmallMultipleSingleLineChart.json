{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": { "name": "values" },
  "width": "container",
  "height": "container",
  "autosize": {
    "resize": true
  },
  "transform": [
    {
      "calculate": "datum.value + datum.stderr",
      "as": "value_upper_bound"
    },
    {
      "calculate": "datum.value - datum.stderr",
      "as": "value_lower_bound"
    }
  ],
  "encoding": {
    "color": {
      "value": "grey"
    },
    "x": {
      "field": "date_value",
      "type": "temporal",
      "axis": {
        "title": null,
        "format": "%m/%d",
        "formatType": "time",
        "tickCount": "month"
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": " "
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "interpolate": "monotone"
      }
    },
    {
      "mark": {
        "type": "area",
        "interpolate": "monotone"
      },
      "encoding": {
        "color": {
          "value": "rgba(0, 0, 0, 0.1)"
        },
        "y": {
          "field": "value_lower_bound",
          "type": "quantitative"
        },
        "y2": {
          "field": "value_upper_bound"
        }
      }
    },
    {
      "selection": {
        "index": {
          "type": "single",
          "on": "mousemove",
          "encodings": ["x"],
          "nearest": true
        }
      },
      "mark": { "type": "point" },
      "encoding": {
        "y": { "field": "value", "type": "quantitative" },
        "opacity": { "value": 0 }
      }
    },
    {
      "transform": [
        {
          "filter": {
            "and": ["index.date_value", { "selection": "index" }]
          }
        }
      ],
      "mark": "rule"
    },
    {
      "transform": [
        {
          "filter": {
            "and": ["index.date_value", { "selection": "index" }]
          }
        }
      ],
      "mark": "text",
      "encoding": {
        "y": { "value": 10 },
        "text": { "field": "date_value", "type": "temporal" }
      }
    },
    {
      "transform": [
        {
          "filter": {
            "and": ["index.date_value", { "selection": "index" }]
          }
        }
      ],
      "mark": "text",
      "encoding": {
        "y": { "value": 20 },
        "text": { "field": "value", "type": "quantitative", "format": ".1r" },
        "color": {
          "value": "black"
        }
      }
    }
  ]
}
