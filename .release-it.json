{
  "hooks": {
    "before:init": "npm run lint",
    "before:release": "npm pack && npm run zip",
    "after:release": "echo Successfully released ${name} v${version}."
  },
  "git": {
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "assets": ["release.zip", "*.tgz"]
  }
}
